{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "makeiteasy/slider",
	"title": "Slider",
	"description": "Slider based on blocks",
	"apiVersion": 3,
	"editorScript": "file:./index.js",
	"viewScriptModule": "file:./swiper-init.js",
	"editorStyle": "file:./index.css",
	"style": [ "file:./swiper-init.css", "file:./style-index.css" ],
	"render": "file:./render.php",
	"category": "media",
	"attributes": {
		"sliderSettings": {
			"type": "string",
			"default": "{\"pagination\": {\"el\": \".swiper-pagination\",\"type\": \"bullets\"},\"autoplay\": {\"delay\": 9000},\"navigation\": {\"nextEl\": \".swiper-button-next\",\"prevEl\": \".swiper-button-prev\"}}"
		},
		"sliderLayout": {
			"type": "number",
			"default": 1
		},
		"showNavigation": {
			"type": "boolean",
			"default": true
		},
		"showPagination": {
			"type": "boolean",
			"default": true
		},
		"showScrollbar": {
			"type": "boolean",
			"default": false
		},
		"useOnlyAdvancedSliderSettings": {
			"type": "boolean",
			"default": false
		},
		"timeBetweenSlides": {
			"type": "string"
		},
		"sliderId": {
			"type": "string"
		},
		"sliderHeight": {
			"type": "string"
		}
	},
	"supports": {
		"anchor": true,
		"align": [ "full", "wide" ],
		"ariaLabel": true,
		"dimensions": {
			"aspectRatio": true,
			"minHeight": true
		},
		"shadow": true,
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true
		}
	}
}
